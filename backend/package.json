{
  "name": "hero-restaurant-backend",
  "version": "0.1.0",
  "description": "Backend for HeroRestaurant - Multi-tenant restaurant management system",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "db:migrate": "bun src/database/migrator.ts migrate",
    "db:rollback": "bun src/database/migrator.ts rollback",
    "db:status": "bun src/database/migrator.ts status",
    "db:seed": "bun src/database/seeder.ts",
    "db:setup": "bun db:migrate && bun db:seed",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "bun test"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "hono": "^3.11.0",
    "jose": "^6.1.3",
    "kysely": "^0.27.0",
    "mysql2": "^3.6.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
