# Node Environment
NODE_ENV=development

# Server
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=hero_restaurant

# Security (32+ characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_required
SESSION_SECRET=your_session_secret_here_minimum_32_characters_required
HASH_SECRET=your_hash_secret_here_minimum_32_characters_required

# Session
SESSION_DURATION_HOURS=21
SESSION_ABSOLUTE_MAX_DAYS=7

# Rate Limiting
MAX_LOGIN_ATTEMPTS_PER_HOUR=5
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:5173

# Cloudflare R2 / S3 Compatible Storage
R2_ENDPOINT=your_r2_endpoint
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=herorestaurant
R2_PUBLIC_URL=your_public_url
