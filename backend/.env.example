# Node Environment
NODE_ENV=development

# Server
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=hero_restaurant

# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_required

# Session
SESSION_DURATION_HOURS=21
SESSION_ABSOLUTE_MAX_DAYS=7

# Rate Limiting
MAX_LOGIN_ATTEMPTS_PER_HOUR=5
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:5173
